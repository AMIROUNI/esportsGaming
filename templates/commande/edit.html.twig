{% extends 'base.html.twig' %}

{% block title %}Modifier Commande{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Modifier la Commande</h1>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Edit Form -->
    <div class="card mb-4">
        <div class="card-header">Modifier les détails de la commande</div>
        <div class="card-body">
            {{ form_start(form, { 'attr': { 'class': 'form-horizontal' } }) }}
                {{ form_row(form.dateDeCommande, {'label': 'Date de Commande'}) }}
                {{ form_row(form.gamer, {'label': 'Gamer'}) }}
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
