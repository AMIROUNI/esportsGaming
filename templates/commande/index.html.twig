{% extends 'base.html.twig' %}

{% block title %}Commande Management
{% endblock %}

{% block body %}
	{% block header %}
		{{ parent() }}
	{% endblock %}

	<div class="container mt-5">
		<h1 class="text-center text-warning mb-4">ðŸŽ® Commande Management ðŸŽ®</h1>

		<div
			class="row">
			<!-- Form Section (left side) -->
			<div class="col-md-4 mb-5">
				<div class="card shadow-lg border-0" style="background: rgba(0, 0, 0, 0.7);">
					<div class="card-header bg-dark text-white">
						<h4 class="mb-0">Ajouter / Mettre Ã  jour une commande</h4>
					</div>
					<div class="card-body">
						{{ form_start(form, { 'attr': { 'class': 'form-horizontal' } }) }}
						<div class="mb-3">
							{{ form_widget(form.dateDeCommande, {'attr': {'class': 'form-control form-control-lg', 'style': 'background: #333; border-color: #ff8000; color: #f5f5f5;'}}) }}
						</div>
						<div class="mb-3">
							{{ form_widget(form.gamer, {'attr': {'class': 'form-control form-control-lg', 'style': 'background: #333; border-color: #ff8000; color: #f5f5f5;'}}) }}
						</div>
						<button type="submit" class="btn btn-success w-100">{{ form.vars.value.id ? 'Mettre Ã  jour' : 'Ajouter' }}</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>

			<!-- Table Section (right side) -->
			<div
				class="col-md-8">
				<!-- Flash Messages -->
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
							{{ message }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endfor %}
				{% endfor %}

				<!-- Commande Table -->
				<div class="table-responsive mt-4">
					<table class="table table-bordered text-center">
						<thead class="table-dark">
							<tr>
								<th>Id</th>
								<th>Date de Commande</th>
								<th>Gamer</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for commande in commandes %}
								<tr>
									<td>{{ commande.id }}</td>
									<td>{{ commande.dateDeCommande ? commande.dateDeCommande|date('Y-m-d') : '' }}</td>
									<td>{{ commande.gamer ? commande.gamer.nom : 'N/A' }}</td>
									<td>
										<!-- Delete Form -->
										<form method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}" style="display:inline-block;">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
											<button class="btn btn-danger btn-sm" onclick="return confirm('ÃŠtes-vous sÃ»r ?')">Supprimer</button>
										</form>

										<!-- Edit Form -->
										<form action="{{ path('app_commande_edit', {'id': commande.id}) }}" method="GET" style="display:inline-block;">
											<button type="submit" class="btn btn-warning btn-sm">Ã‰diter</button>
										</form>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4" class="text-center">Aucune commande trouvÃ©e</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>


	

	<style>
		body {
			background: url('{{ asset('images/bg-fixed-3.jpg') }}') no-repeat center center fixed;
			background-size: cover;
			color: #f5f5f5;
			font-family: 'Orbitron', sans-serif;
		}

		h1 {
			font-family: 'Orbitron', sans-serif;
			color: #ffcc00;
		}

		.card {
			border-radius: 1rem;
		}

		.btn {
			font-weight: bold;
		}

		.table-hover tbody tr:hover {
			background-color: rgba(0, 123, 255, 0.1);
		}

		h1,
		h4 {
			font-family: 'Orbitron', sans-serif;
		}

		/* Flash Messages */
		.alert {
			background: #444;
			color: #f5f5f5;
		}

		/* Margin between Form and Table */
		.table-responsive {
			margin-top: 30px; /* Add margin between form and table */
		}

		/* Custom Style for File Input */
		.custom-file {
			position: relative;
			width: 100%;
		}

		.custom-file .custom-file-input {
			cursor: pointer;
			width: 100%;
			height: calc(2.25rem + 2px);
			background-color: #f8f9fa;
			border: 1px solid #ced4da;
			border-radius: 0.375rem;
			padding: 0.375rem 1.25rem;
		}

		.custom-file .custom-file-input:focus {
			border-color: #80bdff;
			outline: 0;
			box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
		}

		/* Badge Size */
		.badge {
			font-size: 1.2rem;
			padding: 10px 20px;
			border-radius: 1rem;
		}
	</style>
{% endblock %}
