{% extends 'base.html.twig' %}

{% block title %}Liste des Programmes de Coaching{% endblock %}

{% block body %}

     {% block header %}
		{{ parent() }}
	{% endblock %}

    
    <div class="container my-5">
        <h1 class="text-center text-primary mb-5">ðŸŽ® Gestion des Programmes de Coaching ðŸŽ®</h1>

        <div class="row">
            <!-- Form Section -->
            <div class="col-md-4 mb-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">Ajouter un Nouveau Programme</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
                        <button class="btn btn-success w-100 mt-3">Enregistrer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <!-- Table Section -->
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-dark text-white">
                        <h4 class="mb-0">Liste des Programmes</h4>
                    </div>
                    <div class="card-body">
                      {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Titre</th>
                                    <th>DurÃ©e (jours)</th>
                                    <th>Prix</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for programme in programmes %}
                                    <tr>
                                        <td>{{ programme.id }}</td>
                                        <td>{{ programme.titre }}</td>
                                        <td>{{ programme.duree }}</td>
                                        <td>{{ programme.prix }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('app_programme_coaching_edit', {'id': programme.id}) }}" 
                                               class="btn btn-warning btn-sm me-2">Modifier</a>
                                            <form method="post" action="{{ path('app_programme_coaching_delete', {'id': programme.id}) }}" 
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ programme.id) }}">
                                                <button class="btn btn-danger btn-sm" onclick="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer ce programme ?')">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center">Aucun programme trouvÃ©</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Styles -->
    <style>
        body {
            background: url('{{ asset('images/bg-fixed-3.jpg') }}') no-repeat center center fixed;
            background-size: cover;
            color: #f5f5f5;
        }
        .card {
            border-radius: 1rem;
            background: linear-gradient(135deg, #20233a, #1d1e2f);
        }
        .btn {
            font-weight: bold;
        }
        .btn-warning {
            background: linear-gradient(90deg, #ff8000, #ff6600);
        }
        .btn-success {
            background: linear-gradient(90deg, #28a745, #218838);
        }
        .btn-danger {
            background: linear-gradient(90deg, #dc3545, #c82333);
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }
        h1 {
            font-family: 'Orbitron', sans-serif;
            color: #ffcc00;
        }
        .badge {
            font-size: 0.9rem;
        }
    </style>
{% endblock %}
