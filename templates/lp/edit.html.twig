{% extends 'base.html.twig' %}

{% block title %}ðŸŽ® Edit LP ðŸŽ®{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center text-primary mb-5">ðŸŽ® Edit LP ðŸŽ®</h1>

    <div class="row">
        <!-- Edit Form Section -->
        <div class="col-md-6 mb-5 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Edit LP</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.commande, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.commande, {'attr': {'class': 'form-control game-input'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.qteProduit, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.qteProduit, {'attr': {'class': 'form-control game-input'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.produit, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.produit, {'attr': {'class': 'form-control game-input'}}) }}
                    </div>
                    <button class="btn btn-success w-100 mt-3">Save Changes</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Style for Form -->
<style>
    body {
        background: url('{{ asset('images/gallery-2.jpg') }}') no-repeat center center fixed;
        background-size: cover;
        color: #f5f5f5;
    }

    .card {
        border-radius: 1rem;
    }

    .btn {
        font-weight: bold;
    }

    h1, h4 {
        font-family: 'Orbitron', sans-serif;
    }

    /* Custom styling for form inputs */
    .game-input {
        background-color: #212529;
        border: 1px solid #495057;
        color: #f8f9fa;
    }

    .game-input:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
    }
</style>

{% endblock %}
