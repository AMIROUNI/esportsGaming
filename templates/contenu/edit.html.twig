{% extends 'base.html.twig' %}

{% block title %}Gestion des Contenus{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    <div class="container mt-4">
        <h1 class="text-center text-warning mb-4">ðŸ“„ Gestion des Contenus ðŸ“„</h1>

        <div class="row">
            <!-- Form Section -->
            <div class="col-md-12">
                <section class="form-section mb-5 p-4" style="background-color: #333; border-radius: 8px;">
                    {{ form_start(form, { 'attr': { 'class': 'form-horizontal', 'enctype': 'multipart/form-data' } }) }} <!-- Add enctype -->
                        
                        <div class="mb-3">
                            {{ form_widget(form.titre, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'style': 'background: #444; color: #f5f5f5; border: 1px solid #ff8000;',
                                    'placeholder': 'Entrez le titre du contenu'
                                }
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'style': 'background: #444; color: #f5f5f5; border: 1px solid #ff8000;',
                                    'placeholder': 'Entrez une description du contenu'
                                }
                            }) }}
                        </div>

                        <div class="mb-3">
                            {{ form_widget(form.image, {
                                'attr': {
                                    'class': 'form-control-file',
                                    'style': 'background: #444; color: #f5f5f5; border: 1px solid #ff8000;'
                                }
                            }) }}
                        </div>

                        <div class="mb-3">
                            <label for="categories" class="form-label">CatÃ©gories</label>
                            {{ form_widget(form.categories, {
                                'attr': {
                                    'class': 'form-control',
                                    'style': 'background: #444; color: #f5f5f5; border: 1px solid #ff8000;'
                                }
                            }) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-50">{{ form.vars.value.id ? 'Mettre Ã  jour' : 'Enregistrer' }}</button>
                        </div>
                        
                    {{ form_end(form) }}
                </section>
            </div>
        </div>
    </div>

    <style>
        body {
            background: url('{{ asset('images/bg-fixed-2.jpg') }}') no-repeat center center fixed;
            background-size: cover;
            color: #f5f5f5;
            font-family: 'Orbitron', sans-serif;
        }

        h1, h2 {
            font-family: 'Orbitron', sans-serif;
            color: #ffcc00;
        }

        .btn {
            font-weight: bold;
            border-radius: 5px;
        }

        .btn-success {
            background: linear-gradient(90deg, #4CAF50, #388E3C);
            border: none;
        }

        .table-dark {
            background: #232526;
            color: #f5f5f5;
        }

        .form-control {
            background: #444;
            border: 1px solid #ff8000;
            color: #f5f5f5;
            border-radius: 5px;
        }

        .form-control:focus {
            background: #444;
            border-color: #ff8000;
            box-shadow: none;
        }

        .form-control-file {
            background: #444;
            border: 1px solid #ff8000;
            color: #f5f5f5;
            border-radius: 5px;
        }

        .form-control-file:focus {
            background: #444;
            border-color: #ff8000;
            box-shadow: none;
        }

        .container {
            margin-top: 50px;
        }

        .mb-3 {
            margin-bottom: 20px; /* Add margin between form fields */
        }

        .form-section {
            margin-bottom: 30px; /* Space between form and other sections */
        }

        .form-label {
            font-weight: bold;
            color: #ff8000;
        }
    </style>

{% endblock %}
