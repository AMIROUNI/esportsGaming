{% extends 'base.html.twig' %}

{% block title %}üé® Gestion des Cat√©gories {% endblock %}

{% block body %}

     {% block header %}
        {{ parent() }}
    {% endblock %}
<div class="container my-5">
    <h1 class="text-center text-primary mb-5">üé® Gestion des Cat√©gories</h1>

    <div class="row">
        <!-- Formulaire d'ajout -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h4>Ajouter une Cat√©gorie</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control game-input'}}) }}
                    </div>
                    <button class="btn btn-success w-100">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <!-- Liste des cat√©gories -->
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h4>Liste des Cat√©gories</h4>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for category in blog_categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td>{{ category.name }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_blog_category_edit', {'id': category.id}) }}" 
                                       class="btn btn-warning btn-sm">Modifier</a>
                                    <form method="post" action="{{ path('app_blog_category_delete', {'id': category.id}) }}" 
                                          class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button class="btn btn-danger btn-sm" onclick="return confirm('√ätes-vous s√ªr ?')">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucune cat√©gorie trouv√©e</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url('{{ asset('images/bg-fixed-3.jpg') }}') no-repeat center center fixed;
        background-size: cover;
        color: #f5f5f5;
    }

    .card {
        border-radius: 1rem;
    }

    .btn {
        font-weight: bold;
    }

    h1,
    h4 {
        font-family: 'Orbitron', sans-serif;
    }

    /* Custom styling for form inputs */
    .game-input {
        background-color: #212529;
        border: 1px solid #495057;
        color: #f8f9fa;
    }

    .game-input:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
    }

    /* Table row hover effect */
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }
</style>
{% endblock %}
