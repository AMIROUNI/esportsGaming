{% extends 'base.html.twig' %}

{% block title %}Éditer un Groupe{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center text-warning mb-5">Éditer le Groupe</h1>

        <div class="row">
            <!-- Form Section -->
            <div class="col-md-4 mb-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header text-white" style="background: linear-gradient(45deg, #6f42c1, #ff6f61);">
                        <h4 class="mb-0">Édition de Groupe</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(groupForm, {'method': 'POST', 'action': path('app_group_edit', {id: group.id})}) }}
                        <div class="mb-4">
                            {{ form_label(groupForm.nomGroup, 'Nom du Groupe', {'label_attr': {'class': 'form-label', 'style': 'color: #ffcc00;'}}) }}
                            {{ form_widget(groupForm.nomGroup, {'attr': {'class': 'form-control', 'style': 'background-color: #f7f7f7; color: #333; border: 1px solid #ddd; border-radius: 5px; margin-bottom: 15px;'}}) }}
                        </div>
                        <div class="mb-4">
                            {{ form_label(groupForm.logo, 'Logo du Groupe', {'label_attr': {'class': 'form-label', 'style': 'color: #ffcc00;'}}) }}
                            <div class="custom-file">
                                {{ form_widget(groupForm.logo, {'attr': {'class': 'form-control-file', 'style': 'border-radius: 5px; padding: 5px; background-color: #f7f7f7; color: #333; margin-bottom: 15px;'}}) }}
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" style="color: #ffcc00;">Sélectionner des Gamers</label>
                            <div class="d-flex flex-wrap">
                                {% for gamer in groupForm.gamer %}
                                    <div class="form-check me-3" style="display: flex; align-items: center; padding: 5px 10px; border-radius: 5px; margin-bottom: 15px;">
                                        {{ form_widget(gamer, {'attr': {'class': 'form-check-input', 'style': 'background-color: #8b1f9d; border: 1px solid #6b1b81; width: 18px; height: 18px; transition: all 0.3s ease;'}}) }}
                                        <label for="{{ gamer.vars.id }}" class="form-check-label" style="color: #333; margin-left: 10px;">{{ gamer.vars.label }}</label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <button type="submit" class="btn w-100" style="background: #ff5733; border: none; font-weight: bold; color: white; padding: 10px; border-radius: 5px;">Mettre à Jour le Groupe</button>
                        {{ form_end(groupForm) }}
                    </div>
                </div>
            </div>

            
             
        </div>
    </div>

    <!-- Custom Styles -->
    <style>
        body {
            background: url('{{ asset('images/bg-fixed-3.jpg') }}') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            font-family: 'Orbitron', sans-serif;
        }

        .card {
            border-radius: 12px;
        }

        .btn {
            font-weight: bold;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }

        h1, h4 {
            font-family: 'Orbitron', sans-serif;
        }

        .custom-file {
            position: relative;
            width: 100%;
        }

        .custom-file .custom-file-input {
            cursor: pointer;
            width: 100%;
            height: calc(2.25rem + 2px);
            background-color: #f7f7f7;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 0.375rem 1.25rem;
        }

        .custom-file .custom-file-input:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }
    </style>
{% endblock %}
